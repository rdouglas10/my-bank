<div class="mt-4"></div>
  <h2>My Statement</h2>
  
  </br>

  <div class="float-left">
  ***Format Date: 2020-20-20
  </div>
  <form action="/accounts/consult" method="post">
  <%= csrf_meta_tags %>
    <div class="form-group row float-right">
      <label>Start Date</label>&nbsp;&nbsp;
      <input type="text" name="date_stt" class="form-control col-sm-3"/>
      &nbsp;
      <label>Final Date</label>&nbsp;&nbsp;
      <input type="text" name="date_end" class="form-control  col-sm-3"/>&nbsp;
      <input type="submit" class="btn btn-primary col-sm-1.5">
    </div>
    
  </form>

    </br>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>User</th>
          <th>Bank Name</th>
          <th>Agency number</th>
          <th>Type Account</th>
          <th>Account number</th>
          <th>Balance</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% if @accounts  %>
        <% @accounts.each do |record| %>
          <tr>
            <td><%= record.user_id %></td>
            <td><%= record.bank_name %></td>
            <td><%= record.agency_number %></td>
            <td><%= record.type_account %></td>
            <td><%= record.account_number %></td>
            <td><%= record.balance %></td>
            
          </tr>
        <% end %>
        <% else %>
          <tr>
            <td colspan="10">No account found...</td>
          </tr>
        <% end %>
      </tbody>
    </table>
      

<br>


