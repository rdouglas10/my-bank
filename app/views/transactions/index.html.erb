<div class="mt-4"></div>
  <h2>My transactions</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>User</th>
      <th>Account</th>
      <th>Operation</th>
      <th>Value</th>
      <th>Account whither</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
      <td><%= transaction.id %></td>
        <td><%= transaction.user_id %></td>
        <td><%= transaction.account_id %></td>
        <td><%= transaction.operation %></td>
        <td><%= transaction.value %></td>
        <td><%= transaction.account_whither %></td>
        <td><%= link_to 'Show', transaction, class:'btn btn-secondary' %></td>
        <!--<td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path, class:'btn btn-primary' %>
